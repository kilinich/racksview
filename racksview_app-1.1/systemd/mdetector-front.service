[Unit]
Description=Ultrasonic motion detector on /dev/serial1
After=network.target

[Service]
ExecStartPre=/usr/bin/rm -f /var/log/racksview/mdetector-front.log
ExecStart=/opt/racksview/bin/motion_detector.bin --port /dev/serial1 --flag /opt/racksview/var/motion-front.flg --unflag /opt/racksview/var/no-motion-front.flg
Restart=on-failure
RestartSec=10
StandardOutput=null
StandardError=file:/var/log/racksview/mdetector-front.log
MemoryMax=50M

[Install]
WantedBy=multi-user.target
